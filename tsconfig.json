{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "rootDir": "src",
      "outDir": "dist",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
  
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}